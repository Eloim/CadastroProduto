<h1>Lista de Produtos</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Descrição</th>
    <th>Usuário</th>
    <th>Categoria</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= product.user.username %></td>
    <td><%= product.category.name %></td>
    <td><%= link_to 'Visualizar', product %></td>
    <td><%= link_to 'Editar', edit_product_path(product) %></td>
    <td><%= link_to 'Excluir', product, method: :delete, data: { confirm: 'Você tem certeza que deseja excluir este produto?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Produto', new_product_path %>
